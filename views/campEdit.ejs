<% include header.ejs %>
<form class="form-contrainer" method="post" action="/camps/<%= camp.id %>?_method=PUT">
    <h1 class="text-xs-center">Edit Camp</h1>
    <div class="form-group row">
        <label class="col-xs-12 col-form-label">Name:</label>
        <div class="col-xs-12">
            <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-xs-12 col-form-label">Data:</label>

        <div class="col-xs-12">
            <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-xs-12 col-form-label">Description:</label>

        <div class="col-xs-12">
            <textarea class="form-control" rows="7" name="camp[description]" ><%= camp.description %></textarea>
        </div>
    </div>

    <button class="btn btn-primary btn-lg btn-block" type="submit">UPDATE</button>
</form>

<% include footer.ejs %>