<% include ../partials/header.ejs %>
<form class="form-contrainer" method="post" action="/camps">
    <h1 class="text-xs-center">Create Camp</h1>
    <div class="form-group row">
            <label class="col-xs-12 col-form-label">Name:</label>
        <div class="col-xs-12">
            <input class="form-control" type="text" name="camp[name]">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-xs-12 col-form-label">Data:</label>

        <div class="col-xs-12">
            <input class="form-control" type="text" name="camp[image]">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-xs-12 col-form-label">Description:</label>

        <div class="col-xs-12">
            <textarea class="form-control" rows="7" name="camp[description]"></textarea>
        </div>
    </div>

    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
</form>

